{
  "compilerOptions": {
      "rootDir": "src",
      "module": "NodeNext",
      "target": "ESNext",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "moduleResolution": "NodeNext",
      "strict": true,
      "skipLibCheck": true,
      "incremental": false,
      "diagnostics": false,
      "experimentalDecorators": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}